{
  "name": "aega-radio",
  "version": "0.1.0",
  "description": "Minimal personal internet radio desktop app",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 dist-electron/main.js && node scripts/run-electron-dev.cjs\"",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && vite build && electron-builder --win nsis",
    "dist:win": "npm run build"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^8.0.2"
  }
}

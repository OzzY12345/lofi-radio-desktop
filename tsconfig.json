{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@shared/*": ["shared/*"],
      "@renderer/*": ["renderer/src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "electron/**/*.ts",
    "renderer/src/**/*.ts",
    "renderer/src/**/*.tsx",
    "renderer/vite-env.d.ts",
    "shared/**/*.ts"
  ]
}